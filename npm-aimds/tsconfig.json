{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "index.js",
    "cli.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "pkg",
    "pkg-node",
    "pkg-bundler"
  ]
}

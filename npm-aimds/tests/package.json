{
  "name": "aimds-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for AIMDS npm package",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/performance --testTimeout=60000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom='../../AIMDS/src/**/*.ts'",
    "test:coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "benchmark": "ts-node benchmarks/comparison-bench.ts",
    "benchmark:vector": "ts-node benchmarks/vector-search-bench.ts",
    "benchmark:verification": "ts-node benchmarks/verification-bench.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint tests/**/*.ts --max-warnings=0",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/benchmark": "^2.1.5",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "benchmark": "^2.1.4",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}

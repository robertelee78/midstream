{
  "name": "midstreamer",
  "version": "0.2.4",
  "description": "WebAssembly-powered temporal analysis toolkit - DTW, LCS, scheduling, and meta-learning",
  "main": "pkg-node/midstream_wasm.js",
  "module": "pkg-bundler/midstream_wasm.js",
  "types": "pkg/midstream_wasm.d.ts",
  "bin": {
    "midstreamer": "./cli.js"
  },
  "files": [
    "pkg",
    "pkg-node",
    "pkg-bundler",
    "src",
    "examples",
    "cli.js",
    "README.md"
  ],
  "scripts": {
    "build:wasm": "wasm-pack build --target web --out-dir pkg",
    "build:bundler": "wasm-pack build --target bundler --out-dir pkg-bundler",
    "build:nodejs": "wasm-pack build --target nodejs --out-dir pkg-node",
    "build:webpack": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build": "npm run build:wasm && npm run build:bundler && npm run build:nodejs && npm run build:webpack",
    "dev": "webpack serve --mode development --open",
    "test": "wasm-pack test --headless --chrome",
    "clean": "rm -rf pkg pkg-bundler pkg-node dist",
    "prepublishOnly": "npm run clean && npm run build && rm -f pkg/package.json pkg/.gitignore pkg/README.md pkg-node/package.json pkg-node/.gitignore pkg-node/README.md pkg-bundler/package.json pkg-bundler/.gitignore pkg-bundler/README.md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/midstream/midstream.git",
    "directory": "npm-wasm"
  },
  "keywords": [
    "wasm",
    "webassembly",
    "temporal",
    "dtw",
    "lcs",
    "scheduler",
    "meta-learning",
    "quic",
    "webtransport",
    "browser",
    "performance"
  ],
  "author": "Midstream Contributors",
  "license": "MIT",
  "dependencies": {
    "@peculiar/webcrypto": "^1.4.3",
    "agentdb": "^1.6.1",
    "midstreamer": "^0.2.2"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^11.0.0",
    "html-webpack-plugin": "^5.5.4",
    "typescript": "^5.3.3",
    "wasm-pack": "^0.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
